@model IEnumerable<WebApplication3.Models.Order>

@{
    ViewData["Title"] = "Your Purchases";
}

<h1 class="text-center my-4 text-white">Your Purchases</h1>

@if (!Model.Any())
{
    <p class="alert alert-warning text-center">You have not made any purchases yet.</p>
}
else
{
    <div class="row">
        @foreach (var order in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm" style="background-color: #000000; color: white; border: 1px solid #444;">
                    <div class="card-header" style="background-color: #000000; color: white;">
                        @if (order.OrderDate.HasValue)
                        {
                            <h5>Order placed on @order.OrderDate.Value.ToString("MMMM dd, yyyy h:mm tt")</h5>
                        }
                        else
                        {
                            <h5>Order date unavailable</h5>
                        }
                    </div>
                    <div class="card-body" style="background-color: #000000;">
                        <p class="card-text"><strong>Total Price:</strong> $@order.TotalPrice</p>
                        <h6 class="mt-3">Artworks:</h6>
                        <ul class="list-group" style="background-color: #222;">
                            @foreach (var artwork in order.Artworks)
                            {
                                <li class="list-group-item" style="background-color: #222; color: white;">@artwork.Title</li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-muted" style="background-color: #000000; color: white;">
                        <small>Order ID: @order.Id</small>
                    </div>
                </div>
            </div>
        }
    </div>
}
