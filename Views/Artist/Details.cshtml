@model WebApplication3.Models.Artist

@{
    ViewData["Title"] = "Artist Details";
}

<div class="mb-3">
    <a href="@Url.Action("Index", "Home", new { tab = "artists" })" class="btn btn-secondary" style="margin-left: -10px;">Back</a>
</div>

<h1>@Model.FullName</h1>
<img src="@Model.ProfileImageUrl" alt="@Model.FullName" class="img-fluid rounded" style="width: 100%; height: 100%; object-fit: contain;" />
<p>@Model.Bio</p>

<h3>Artworks by @Model.FullName</h3>
<div class="row">
    @foreach (var artwork in Model.Artworks)
    {
        <div class="col-md-4">
            <div class="card" style="background-color: #000000; border: 1px solid #ccc; color: white;">
                <img src="@(@artwork.ImageUrl ?? "/images/notfound.jpg")" alt="@Model.FullName" class="img-fluid rounded" style="max-height: 300px; object-fit: cover; width: 100%;" />
                <div class="card-body">
                    <h5 class="card-title">@artwork.Title</h5>
                    <p class="card-text">@artwork.Description</p>
                    <a href="@Url.Action("Details", "Artwork", new { id = artwork.Id })" class="btn btn-primary">View Artwork</a>
                </div>
            </div>
        </div>
    }
</div>
